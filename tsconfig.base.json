      "@whoa/web/shared/ui/icons-provider": ["libs/web/shared/ui/icons-provider/src/index.ts"],
      "@whoa/web/shared/ui/layout": ["libs/web/shared/ui/layout/src/index.ts"],
      "@whoa/web/shared/ui/zorro-provider": ["libs/web/shared/ui/zorro-provider/src/index.ts"]
