      "@whoa/web/auth/utils": ["libs/web/auth/utils/src/index.ts"],
      "@whoa/web/core": ["libs/web/core/src/index.ts"],
      "@whoa/web/hop/feature/hop-home": ["libs/web/hop/feature/hop-home/src/index.ts"],
      "@whoa/web/hop/feature/hop-shell": ["libs/web/hop/feature/hop-shell/src/index.ts"],
      "@whoa/web/settings/data-access": ["libs/web/settings/data-access/src/index.ts"],
